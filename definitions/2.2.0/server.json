{
  "type": "object",
  "description": "An object representing a Server.",
  "required": [
    "url",
    "protocol"
  ],
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d.\\-_]+$": {
      "$ref": "specificationExtension"
    }
  },
  "properties": {
    "url": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "protocol": {
      "type": "string",
      "description": "The transfer protocol."
    },
    "protocolVersion": {
      "type": "string"
    },
    "variables": {
      "$ref": "serverVariables"
    },
    "security": {
      "type": "array",
      "items": {
        "$ref": "SecurityRequirement"
      }
    },
    "bindings": {
      "$ref": "bindingsObject"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "server"
}