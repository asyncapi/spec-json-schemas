{
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d.\\-_]+$": {
      "$ref": "http://asyncapi.com/draft-07/schemas/specificationExtension"
    }
  },
  "properties": {
    "schemaFormat": {
      "type": "string"
    },
    "contentType": {
      "type": "string"
    },
    "headers": {
      "oneOf": [
        {
          "$ref": "http://asyncapi.com/draft-07/schemas/Reference"
        },
        {
          "$ref": "http://asyncapi.com/draft-07/schemas/schema"
        }
      ]
    },
    "correlationId": {
      "oneOf": [
        {
          "$ref": "http://asyncapi.com/draft-07/schemas/Reference"
        },
        {
          "$ref": "http://asyncapi.com/draft-07/schemas/correlationId"
        }
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "http://asyncapi.com/draft-07/schemas/tag"
      },
      "uniqueItems": true
    },
    "summary": {
      "type": "string",
      "description": "A brief summary of the message."
    },
    "name": {
      "type": "string",
      "description": "Name of the message."
    },
    "title": {
      "type": "string",
      "description": "A human-friendly title for the message."
    },
    "description": {
      "type": "string",
      "description": "A longer description of the message. CommonMark is allowed."
    },
    "externalDocs": {
      "$ref": "http://asyncapi.com/draft-07/schemas/externalDocs"
    },
    "deprecated": {
      "type": "boolean",
      "default": false
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "bindings": {
      "$ref": "http://asyncapi.com/draft-07/schemas/bindingsObject"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asyncapi.com/draft-07/schemas/messageTrait"
}