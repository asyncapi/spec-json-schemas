{
  "title": "AsyncAPI 2.2.0 schema.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asyncapi.com/draft-07/schemas/asyncapi",
  "type": "object",
  "required": [
    "asyncapi",
    "info",
    "channels"
  ],
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d.\\-_]+$": {
      "$ref": "http://asyncapi.com/draft-07/schemas/specificationExtension"
    }
  },
  "properties": {
    "asyncapi": {
      "type": "string",
      "enum": [
        "2.2.0"
      ],
      "description": "The AsyncAPI specification version of this document."
    },
    "id": {
      "type": "string",
      "description": "A unique id representing the application.",
      "format": "uri"
    },
    "info": {
      "$ref": "http://asyncapi.com/draft-07/schemas/info"
    },
    "servers": {
      "type": "object",
      "additionalProperties": {
        "$ref": "http://asyncapi.com/draft-07/schemas/server"
      }
    },
    "defaultContentType": {
      "type": "string"
    },
    "channels": {
      "$ref": "http://asyncapi.com/draft-07/schemas/channels"
    },
    "components": {
      "$ref": "http://asyncapi.com/draft-07/schemas/components"
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "http://asyncapi.com/draft-07/schemas/tag"
      },
      "uniqueItems": true
    },
    "externalDocs": {
      "$ref": "http://asyncapi.com/draft-07/schemas/externalDocs"
    }
  }
}