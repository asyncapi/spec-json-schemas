{
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^x-[\\w\\d.\\-_]+$": {
      "$ref": "http://asyncapi.com/draft-07/schemas/specificationExtension"
    }
  },
  "properties": {
    "$ref": {
      "$ref": "http://asyncapi.com/draft-07/schemas/ReferenceObject"
    },
    "parameters": {
      "type": "object",
      "additionalProperties": {
        "$ref": "http://asyncapi.com/draft-07/schemas/parameter"
      }
    },
    "description": {
      "type": "string",
      "description": "A description of the channel."
    },
    "servers": {
      "type": "array",
      "description": "The names of the servers on which this channel is available. If absent or empty then this channel must be available on all servers.",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "publish": {
      "$ref": "http://asyncapi.com/draft-07/schemas/operation"
    },
    "subscribe": {
      "$ref": "http://asyncapi.com/draft-07/schemas/operation"
    },
    "deprecated": {
      "type": "boolean",
      "default": false
    },
    "bindings": {
      "$ref": "http://asyncapi.com/draft-07/schemas/bindingsObject"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://asyncapi.com/draft-07/schemas/channelItem"
}