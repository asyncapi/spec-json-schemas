{
    "asyncapi": "3.0.0",
    "info": {
        "title": "Account Service",
        "version": "1.0.0",
        "description": "This service is in charge of processing user signups"
    },
    "channels": {
        "UserSignedUpChannel": {
            "address": "user/signedup",
            "messages": {
                "UserSignedUp": {
                    "$ref": "#/components/messages/UserSignedUp"
                }
            }
        }
    },
    "operations": {
        "PublishUserSignedUp": {
            "action": "send",
            "channel": {
                "$ref": "#/channels/UserSignedUpChannel"
            },
            "bindings": {
                "mqtt": {
                    "bindingVersion": "0.1.0",
                    "qos": 1
                },
                "kafka": {
                    "bindingVersion": "0.3.0",
                    "clientId": {
                        "type": "string",
                        "enum": [
                            "my-app-id"
                        ]
                    }
                }
            }
        },
        "PublishUserSignedUpDefaultBinding": {
            "action": "send",
            "channel": {
                "$ref": "#/channels/UserSignedUpChannel"
            },
            "bindings": {
                "mqtt": {
                    "qos": 1
                },
                "kafka": {
                    "clientId": {
                        "type": "string",
                        "enum": [
                            "my-app-id"
                        ]
                    }
                }
            }
        }
    },
    "components": {
        "messages": {
            "UserSignedUp": {
                "payload": {
                    "type": "object",
                    "properties": {
                        "displayName": {
                            "type": "string",
                            "description": "Name of the user"
                        },
                        "email": {
                            "type": "string",
                            "format": "email",
                            "description": "Email of the user"
                        }
                    }
                }
            }
        }
    }
}